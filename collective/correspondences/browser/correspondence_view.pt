<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">

    <div class="bdiv" tal:define="iset view/getSet;">
    <div class="cdiv">
            <table class="preview-image-wrapper" tal:condition="iset">
                <tr>
			<th tal:repeat="item iset" tal:attributes="style string:width:${item/img/width}px"><a tal:attributes="href item/obj/absolute_url"><img tal:replace="structure python:item['img'].tag(title=item['obj'].Description()+'; '+item['obj'].artist)" /></a></th>
                </tr>
            </table>

    </div>
</div>


<dl>
    <tal:block tal:condition="context/correspondence_credit | nothing">
        <dt>Correspondence Credit</dt>
        <dl tal:content="context/correspondence_credit" />
    </tal:block>
    <tal:block tal:condition="context/text | nothing">
        <dt>Notes</dt>
        <dl tal:content="structure context/text/output" />
    </tal:block>
</dl>

    </metal:content-core>
</metal:content-core>

</body>
</html>
