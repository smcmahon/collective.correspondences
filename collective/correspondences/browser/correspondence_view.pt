<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">

<style>
.cdiv {
    display: inline-block;
}
.preview-image-wrapper {
    height: 400px;
}
.preview-image-wrapper th {
    height: 400px;
    vertical-align: bottom;
}
.preview-image-wrapper td {
    text-align: center;
}
.bdiv {
    margin: 0 auto;
}
</style>

<div class="bdiv">
    <div tal:repeat="ref context/correspondence" class="cdiv">
        <tal:block tal:define="item nocall:ref/to_object">
            <table class="preview-image-wrapper">
                <tr><th>
                    <img tal:replace="structure item/@@images/image/preview" />
                </th></tr>
                <tr><td>
                    <a tal:attributes="href item/absolute_url" title="More information..."><div tal:content="item/description" /></a>
                </td></tr>
            </table>

        </tal:block>
    </div>
</div>


<dl>
    <tal:block tal:condition="context/correspondence_credit | nothing">
        <dt>Correspondence Credit</dt>
        <dl tal:content="context/correspondence_credit" />
    </tal:block>
    <tal:block tal:condition="context/text | nothing">
        <dt>Notes</dt>
        <dl tal:content="structure context/text/output" />
    </tal:block>
</dl>

    </metal:content-core>
</metal:content-core>

</body>
</html>